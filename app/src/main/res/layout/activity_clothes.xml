        android:background="#4A4B2F"
        android:id="@+id/imageView12"
        android:layout_width="171dp"
        android:layout_height="155dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:srcCompat="@drawable/gorkapants" />

    <TextView
        android:background="#4A4B2F"
        android:id="@+id/textView22"
        android:layout_width="384dp"
        android:layout_height="51dp"
        android:layout_marginStart="4dp"
        android:text="Военная одежда так же неплохо подойдёт, поскольку ткань у них, как правило, плотная и прочная. Бушлат с подстёжкой для таких условий просто идеален."
